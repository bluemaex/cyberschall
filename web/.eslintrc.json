{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "plugins": ["react", "prettier"],
  "rules": {
    "indent": 2,
    "jsx-a11y/anchor-is-valid": 0,
    "max-len": ["error", 120],
    "prettier/prettier": 2,
    "react/jsx-uses-react": 1,
    "semi": [2, "never"]
  },
  "env": {
    "jest": true,
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.dev.js"
      }
    }
  }
}
